{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "lib": ["DOM", "ES2017"],
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
